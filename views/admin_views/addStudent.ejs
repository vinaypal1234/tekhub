<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Course</title>

    <%- include('../../partials/cdn.ejs') %>

    <!-- NAVBAR CSS -->
    <link rel="stylesheet" href="../../css/admin/navbar.css" />

    <!-- COURSE MANAGEMENT CSS -->
    <link rel="stylesheet" href="../../css/admin/addStudent.css" />
  </head>

  <body>
    <%- include('../../partials/admin/navbar.ejs') %>
    <div class="add-student">
      <form>
        <h4>Add student</h4>
        <div class="student-name">
          <!-- <i class="bx bxl-gmail"></i> -->
          <input type="text" id="fullname" placeholder="Name" />
          <span id="fullname-validation" class="validation"></span>
        </div>
        <div class="student-number">
          <!-- <i class="bx bxl-gmail"></i> -->
          <input type="number" id="number" placeholder="Phone" />
          <span id="number-validation" class="validation"></span>
        </div>
        <div class="student-email">
          <!-- <i class="bx bxs-lock-alt"></i> -->
          <input type="email" id="email" placeholder="Email" />
          <span id="email-validation" class="validation"></span>
        </div>

        <div class="password">
          <input type="password" id="password" placeholder=" Password" />
          <span id="password-validation" class="validation"></span>
        </div>

        <button id="add-student-btn">ADD</button>
      </form>
    </div>

    <script src="../../js/admin/addStudent.js"></script>
  </body>
</html>
